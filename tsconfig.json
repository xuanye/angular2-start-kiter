{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node",
      "uglify-js",
      "source-map",
      "webpack"
    ]
  },

  "exclude": [
    "node_modules",
    "dist"
  ],

  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}